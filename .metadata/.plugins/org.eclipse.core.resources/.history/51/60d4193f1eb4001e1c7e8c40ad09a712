package ch04_control;

import java.util.Scanner;

public class Ex11_For {

	public static void main(String[] args) {
		// 1에서 100까지 합
		int sum = 0;
		for (int i = 1; i <= 100; i++)
			sum += i;
		System.out.println("1에서 100까지 합: " + sum);
		
		// 1에서 100까지 홀수 합
		int oddSum = 0;
		for(int i = 1; i <= 100; i += 2)
			oddSum += i;
		System.out.println("1에서 100까지 홀수의 합: " + oddSum);
		
		// 자기자신을 제외한 약수의 합, num = 24
		int divSum = 0, num = 24;
		for ( int i = 1; i < num; i++)
			if(num % i == 0)
				divSum += i;
		System.out.println(num + "의 자기자신을 제외한 약수의 합:" + divSum);
		
		// 사용자가 5번 입력한 문자열을 받아서, 공백을 사이에 넣고 하나의 문자열로 만들어서 출력
		Scanner scan = new Scanner(System.in);
		String text = "";
		for (int i = 1; i <= 5; i++) {
			System.out.print("입력> ");
			String line = scan.nextLine();
			text += line + " ";
		}
		syso
	}

}
