package ch02_type;

public class Ex03_TypeConvversion {

	public static void main(String[] args) {
		
		/*
		 * 자동 타입변환(Promotion): 작은 것에서 큰 것으로 갈 경우
		 *		byte -> short -> int -> long -> float -> double -> String
		 */
		short a = 256;
		int b = a;
		long c = b;
		float d = c;
		double e = d;
		System.out.println("%d, %d, %.1f, %.1f%n", b, c, d, e);
	}

}
