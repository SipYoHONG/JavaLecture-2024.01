package ch02_type;

public class Ex01_Variable {

	public static void main(String[] args) {
		int age;
		age = 21;
		int score = 88;		// 변수를 선언하면서 초기화를 동시에 해주는 것을 권장
		var value = age * score;
		System.out.println("age: " + age +", score: " + score + ", value: " + value);
		
		/*
		 *  변수이름 규칙
		 *  1. 영문대소문자 및 한글 사용 가능
		 *  2. 특수문자는 두 가지만 사용가능: '_','$'
		 *  
		 */	
	}

}
